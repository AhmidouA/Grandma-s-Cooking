<%- include('./partials/header.ejs'); -%>

<div style="text-align:center">
    <h2 style="font-family:itallic">Favourites: </h2>
    <a href="/dashboard/favorites/newfavourite"><button type="button" class="btn btn-success" style="margin-bottom:15px">Add New Fav</button></a>
    <% for (const elementFavorite of favorite)  { %>
    <div class="container" style="text-align:center">
        <div class="row">
            
            <div class="col-lg-4">
                <div class="card" style="width: 15rem;">
                    <img class="card-img-top" src="<%= elementFavorite.image %>" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">"<%= elementFavorite.title %>" </h5>
                        <p class="card-text">"<%= elementFavorite.description %>" </p>
                        <a href="#" class="btn btn-primary">"<%= elementFavorite.date %>" </a>
                        <form action="/dashboard/favorites/?_method=DELETE" method="POST">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn btn-danger" style="margin-top:15px;">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
             <% } %>
        </div>

    </div>
</div>

<%- include('./partials/footer.ejs'); -%>

